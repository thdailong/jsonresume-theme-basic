{{#if resume.education.length}}
<section id="education">
	<h3 class="title-section">Education</h3>
  <div class="divider"></div>
	{{#each resume.education}}
	<div class="item">
		<div class="flex-between">
			<div class="title">
				{{area}}
			</div>
			<div class="institution">
				{{institution}}
			</div>
		</div>
		<div class="flex-between">
			<i class="studyType">
				{{studyType}}
			</i>
			<div>
				<span class="startDate">
					{{startDate}}
				</span>
				-
				<span class="endDate">
					{{endDate}}
				</span>
			</div>
		</div>
		{{#if courses.length}}
			<ul class="courses">
				{{#each courses}}
				<li>{{.}}</li>
				{{/each}}
			</ul>
		{{/if}}
	</div>
	{{/each}}
</section>
{{/if}}
